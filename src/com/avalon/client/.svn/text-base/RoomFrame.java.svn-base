    public void setRoomInfo(RoomEntry room) {
    	this.roomInfo = room;
    	this.setTitle("아발론 온라인 - "+room.getTitle() );
    	roomInfo.me = thread.me;
    	setMe();
    	if(this.roomInfo.getOwner().equals(thread.me.getId())){
    		setEnemy(roomInfo.getEnemy());
    	}
    }
    
    public void setMe(){

    	String profile_url = "http://graph.facebook.com/"+roomInfo.me.getId()+"/picture?type=large";
    	Image image = iUtil.getImage(profile_url,70,80);
    	
    	
    	// My Setting
    	this.myPicture.setIcon(new ImageIcon(image));
    	jLabel12.setText(roomInfo.me.getName());
    	jLabel3.setText("전적 : "+roomInfo.me.getScore());
    	
    	this.repaint();
    }
    
    public void setEnemy(UserEntry enemy) {
    	this.roomInfo.enemy = enemy;
    	thread.enemy = enemy;

    	String profile_url2 = "http://graph.facebook.com/"+roomInfo.enemy.getId()+"/picture?type=large";
    	Image image2 = iUtil.getImage(profile_url2,70,80);
    	
    	// Enemy Setting
    	this.myPicture1.setIcon(new ImageIcon(image2));
    	jLabel4.setText(roomInfo.enemy.getName());
    	jLabel10.setText("전적 : "+roomInfo.enemy.getScore());
    	
    	
    	this.repaint();
    }
    
    public void setMessage(MessageEntry tmsg) {
    	String from_name="";
    	String to_name="";
    	for(UserEntry user : thread.Friends){
    		if(user.getId().equals(tmsg.getFrom_id())){
    			from_name = user.getName();
    		}
    		if(user.getId().equals(tmsg.getTo_id())){
    			to_name = user.getName();
    		}
    	}
    	this.jTextArea1.setText(jTextArea1.getText()+"\n["+from_name+"] "+tmsg.getMessage());
    }
    
    public void clearRoom() {
    	this.roomInfo = new RoomEntry();
    }
