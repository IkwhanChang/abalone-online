    protected void jButton1MouseClicked(MouseEvent evt) {
		// TODO Auto-generated method stub
    	//public CPacket(String token, String task_type,String task_title,String message) {
    	// 1. Create MessageEntry
    	 MessageEntry tMsg = new MessageEntry();
    	 tMsg.setFrom_id(thread.me.getId());
    	if(thread.enemy.getId().equals("")){
    		tMsg.setTo_id(thread.me.getId());
    	}
    	tMsg.setMessage(jTextField1.getText());
    	CPacket tpkt = new CPacket();
        tpkt.setToken(thread.getACCESS_TOKEN());
        
        tpkt.setTask_type("SEND");
        tpkt.setTask_title("CHAT");
        try {
			tpkt.setMessage(tMsg.getJSON());
			cMgr.SendMessage(tpkt);
		} catch (JsonGenerationException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (JsonMappingException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
        
		
	}
    
    private void jPanel4MouseClicked(java.awt.event.MouseEvent evt) {
    	//JOptionPane.showMessageDialog(null, " "+evt.getX()+" "+evt.getY());
    	int x = evt.getX();
    	int y = evt.getY();
    	
    	for(int i = 0 ; i < jPanel4.stones.length ; i++) {
    		StoneEntry temp = jPanel4.stones[i];
    		if(x >= temp.getX() && temp.getX() + temp.getWidth()  >= x && y >= temp.getY() && temp.getY() + temp.getHeight() >= y) {
    			//JOptionPane.showMessageDialog(null, i+" 번돌 클릭됨");
    			jPanel4.changeColor(i);
    			break;
    		}
    	}
    }
    
